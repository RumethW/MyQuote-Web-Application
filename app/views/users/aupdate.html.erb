<div class="container my-5">
  <h3 class="text-center mb-4"> ðŸ‘¤ Update Your Details</h3>

  <%= form_with(model: @user, class: "shadow p-4 rounded border") do |form| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mb-3">
      <%= form.label :fname, "First Name", class: 'form-label' %>
      <%= form.text_field :fname, placeholder: 'Enter your first name', class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :lname, "Last Name", class: 'form-label' %>
      <%= form.text_field :lname, placeholder: 'Enter your last name', class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :email, "Email Address", class: 'form-label' %>
      <%= form.text_field :email, placeholder: 'Enter your email address', class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :password, "Password", class: 'form-label' %>
      <%= form.password_field :password, placeholder: 'Choose a strong password', class: 'form-control' %>
    </div>

    <% if current_user.is_admin? %>
      <div class="form-check mb-3">
        <%= form.check_box :is_admin, class: 'form-check-input' %>
        <%= form.label :is_admin, "Make this user an Admin", class: 'form-check-label' %>
      </div>
    <% end %>

    <%= form.hidden_field :acc_status, value: "Active" %>

    <div class="d-grid gap-2 mt-4">
      <%= form.submit 'Submit', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>

  <div class="text-center mt-3">
    <%= button_to "Back to Profile", details_path, method: :get, class: "btn btn-warning mb-3" %>
  </div>
