<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header text-center">
      <h1>Quote Details</h1>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <div class="col-4 font-weight-bold">Quote Text:</div>
        <div class="col-8"><blockquote><%= quote.qu_text %></blockquote></div>
      </div>
      <div class="row mb-3">
        <div class="col-4 font-weight-bold">Author:</div>
        <div class="col-8"><%= quote.author.fname %> <%= quote.author.lname %></div>
      </div>
      <div class="row mb-3">
        <div class="col-4 font-weight-bold">Published Year:</div>
        <div class="col-8"><%= quote.pub_year %></div>
      </div>
      <div class="row mb-3">
        <div class="col-4 font-weight-bold">Comment:</div>
        <div class="col-8"><%= quote.comment.present? ? quote.comment : "No comments available" %></div>
      </div>
      <div class="row mb-3">
        <div class="col-4 font-weight-bold">Added by:</div>
        <div class="col-8"><%= quote.user.fname %> <%= quote.user.lname %></div>
      </div>
      <div class="row mb-3">
        <div class="col-4 font-weight-bold">Categories:</div>
        <div class="col-8">
          <% if quote.categories.any? %>
            <ul class="list-unstyled">
              <% quote.categories.each do |category| %>
                <li><%= category.cat_name %></li>
              <% end %>
            </ul>
          <% else %>
            <p>No categories available</p>
          <% end %>
        </div>
      </div>
      <div class="mt-3">
        <%= link_to 'Edit Quote', edit_quote_path(quote), class: 'btn btn-primary btn-block mb-3' %>
        <%= button_to 'Destroy this quote', @quote, method: :delete, class: 'btn btn-danger btn-block mb-3' %>
        <%= link_to 'Back to your quotes', '/your-quotes', class: 'btn btn-warning btn-block' %> <!-- Yellow Button linking to '/your-quotes' -->
    </div>
  </div>
</div>
