<h3 class="text-center mb-5"> ðŸ’¬ Your Quotes</h3>
<hr />

<% @quotes.each do |quote| %>
  <div class="container">
    <div class="row justify-content-center mb-4">
      <div class="col-md-8">
        <div class="card bg-light shadow-lg rounded-lg hover-shadow-sm">
          <div class="card-body p-4">
            
            <!-- Badge for Public/Private Status -->
            <div class="d-flex justify-content-between align-items-center">
              <% if quote.is_public? %>
                <span class="badge bg-success text-white">Public</span>
              <% else %>
                <span class="badge bg-danger text-white">Private</span>
              <% end %>
            </div>

            <!-- Quote Text -->
            <h4 class="card-title text-dark font-weight-bold mt-3 mb-4 text-center" style="font-size: 1.5rem;">
              <%= quote.qu_text %>
            </h4>

            <!-- Author and Published Year -->
            <p class="card-text text-muted text-center mb-3">
              <strong> ðŸ‘¤ Author:</strong> <%= quote.author&.fname && quote.author&.lname ? "#{quote.author.fname} #{quote.author.lname}" : "Unknown Author" %><br>
              <% if quote.pub_year.present? %>
                <strong> ðŸ“… Published Year:</strong> <%= quote.pub_year %>
              <% end %>
            </p>

            <!-- Manage Quote Button -->
            <div class="d-flex justify-content-center">
              <%= link_to 'Manage Quote', quote_path(quote), class: 'btn btn-primary btn-sm' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
